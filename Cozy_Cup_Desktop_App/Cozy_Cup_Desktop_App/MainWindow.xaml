<Window x:Class="Cozy_Cup_Desktop_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cozy_Cup_Desktop_App"
        mc:Ignorable="d"
        Title="Cozy_Cup" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/vecteezy_ai-generated-wooden-table-with-coffee-cup-vase-and-flowers_38995387.jpg" Stretch="Fill" Opacity="0.3" />
    </Window.Background>
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="434" LastChildFill="False" VerticalAlignment="Center" Width="304" Background="#FF902D0C">
            <Image x:Name="Logo" Width="137" Height="139" Margin="75,-200,50,50" Source="/vecteezy_aromatic-art-coffee-cup-sketches-and-illustrations-ai_26691146.png">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="/vecteezy_aromatic-art-coffee-cup-sketches-and-illustrations-ai_26691146.png"/>
                </Image.OpacityMask>
            </Image>
        </DockPanel>
        <TextBox HorizontalAlignment="Left" Height="45" Margin="67,145,0,0" TextWrapping="Wrap" Text="Cozy_Cup" VerticalAlignment="Top" Width="204" Foreground="White" Background="#FF902D0C" BorderBrush="#FF902D0C" FontFamily="Constantia" FontSize="35" RenderTransformOrigin="0.759,0.67"/>
        <TextBox HorizontalAlignment="Left" Height="38" Margin="50,0,0,0" TextWrapping="Wrap" Text="Finding" VerticalAlignment="Center" Width="119" Foreground="White" Background="#FF902D0C" BorderBrush="#FF902D0C" FontFamily="Lucida Handwriting" FontSize="17" RenderTransformOrigin="0.759,0.67"/>
        <TextBox HorizontalAlignment="Left" Height="38" Margin="130,228,0,0" TextWrapping="Wrap" Text="Comfort" VerticalAlignment="Top" Width="118" Foreground="White" Background="#FF902D0C" BorderBrush="#FF902D0C" FontFamily="Lucida Handwriting" FontSize="17" RenderTransformOrigin="0.759,0.67"/>
        <TextBox HorizontalAlignment="Left" Height="33" Margin="58,247,0,0" TextWrapping="Wrap" Text="In evry" VerticalAlignment="Top" Width="102" Foreground="White" Background="#FF902D0C" BorderBrush="#FF902D0C" FontFamily="Lucida Handwriting" FontSize="17" RenderTransformOrigin="0.749,1.105"/>
        <TextBox HorizontalAlignment="Left" Height="38" Margin="130,271,0,0" TextWrapping="Wrap" Text="Cup" VerticalAlignment="Top" Width="60" Foreground="White" Background="#FF902D0C" BorderBrush="#FF902D0C" FontFamily="Lucida Handwriting" FontSize="17" RenderTransformOrigin="0.819,-0.555"/>
        <Label Content="SIGN IN" HorizontalAlignment="Left" Height="43" Margin="344,51,0,0" VerticalAlignment="Top" Width="115" Foreground="#FFEEC8BC" FontSize="25" FontFamily="Arial Rounded MT Bold"/>
        <Label Content="Username: " HorizontalAlignment="Left" Height="38" Margin="344,116,0,0" VerticalAlignment="Top" Width="208" Foreground="#FFEEC8BC" FontSize="20" FontFamily="Arial Rounded MT Bold"/>
        <Label Content="Password: " HorizontalAlignment="Left" Height="38" Margin="344,217,0,0" VerticalAlignment="Top" Width="208" Foreground="#FFEEC8BC" FontSize="20" FontFamily="Arial Rounded MT Bold"/>
        <CheckBox Content="Show Password" HorizontalAlignment="Left" Height="29" Margin="344,322,0,0" 
          VerticalAlignment="Top" Width="136" FontSize="15" Background="#FFFAE6E6" 
          IsChecked="False" Cursor="Hand" Checked="ShowPassword_Checked" Unchecked="ShowPassword_Unchecked" Foreground="#FFEEC8BC"/>
        
        <!-- Username TextBox -->
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Height="22" Margin="344,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="383" Background="#FFEEE3E3"/>
        
        <!-- PasswordBox -->
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="21" Margin="344,269,0,0" 
             VerticalAlignment="Top" Width="383" Background="#FFEEE3E3" Cursor="Hand"/>
        <!-- TextBox for plain text password (initially hidden) -->
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Height="21" Margin="344,269,0,0" 
         VerticalAlignment="Top" Width="383" Background="#FFEEE3E3" Visibility="Hidden" Cursor="Hand"/>

        <!-- Login Button -->
        <Button Content="Login" x:Name="LoginButton" HorizontalAlignment="Left" Height="37" Margin="344,351,0,0" VerticalAlignment="Top" Width="184" Background="#FF902D0C" Opacity="0.8" BorderBrush="#FF252121" FontFamily="Arial Rounded MT Bold" FontSize="25" Foreground="#FFFFF6F6" Cursor="Hand" Click="LOGIN"/>
        
        <!-- Register Button -->
        <Button Content="RGISTER" HorizontalAlignment="Left" Height="37" Margin="23,351,0,0" VerticalAlignment="Top" Width="248" Background="#FFF4D6D6" Opacity="0.8" BorderBrush="#FF902D0C" FontFamily="Arial Rounded MT Bold" FontSize="25" Foreground="#FF902D0C" Cursor="Hand" Click="REGISTER"/>
        
        <Label Content="Create an Account" HorizontalAlignment="Left" Height="38" Margin="53,309,0,0" VerticalAlignment="Top" Width="198" Foreground="White" FontSize="20" FontFamily="Arial Rounded MT Bold"/>
    </Grid>
</Window>
