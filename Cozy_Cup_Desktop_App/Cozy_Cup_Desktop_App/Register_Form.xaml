<Window x:Class="Cozy_Cup_Desktop_App.Register_Form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register_Form" Height="450" Width="800">
    <Grid Background="#FFF7F5F2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="387*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <DockPanel HorizontalAlignment="Left" Height="868" VerticalAlignment="Center" Width="304" Background="#FF902D0C">
            <Image x:Name="Logo" Width="137" Height="139" Margin="75,-600,50,50" Source="/vecteezy_aromatic-art-coffee-cup-sketches-and-illustrations-ai_26691146.png">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="/vecteezy_aromatic-art-coffee-cup-sketches-and-illustrations-ai_26691146.png"/>
                </Image.OpacityMask>
            </Image>
        </DockPanel>
        <Label Content="REGISTER" HorizontalAlignment="Left" Height="43" Margin="344,24,0,0" VerticalAlignment="Top" Width="160" Foreground="#FF902D0C" FontSize="25" FontFamily="Arial Rounded MT Bold"/>
        <Label Content="Username: " HorizontalAlignment="Left" Height="38" Margin="344,67,0,0" VerticalAlignment="Top" Width="208" Foreground="#FF902D0C" FontSize="20" FontFamily="Arial Rounded MT Bold"/>
        <Label Content="Password: " HorizontalAlignment="Left" Height="38" Margin="344,144,0,0" VerticalAlignment="Top" Width="208" Foreground="#FF902D0C" FontSize="20" FontFamily="Arial Rounded MT Bold"/>
        <CheckBox Content="Show Password" HorizontalAlignment="Left" Height="29" 
          Margin="344,322,0,0" VerticalAlignment="Top" Width="136" FontSize="15" 
          Background="#FFFAE6E6" IsChecked="False" Cursor="Hand" 
          Checked="ShowPassword_Checked" Unchecked="ShowPassword_Unchecked"/>

        <Button Content="SIGNUP" HorizontalAlignment="Left" Height="37" Margin="344,351,0,0" VerticalAlignment="Top" Width="184" Background="#FF902D0C" Opacity="0.8" BorderBrush="#FF252121" FontFamily="Arial Rounded MT Bold" FontSize="25" Foreground="#FFFFF6F6" Cursor="Hand" Click="Button_Click"/>
        <Button Content="SIGN IN" HorizontalAlignment="Left" Height="37" Margin="23,351,0,0" 
        VerticalAlignment="Top" Width="248" Background="#FFF4D6D6" Opacity="0.8" 
        BorderBrush="#FF902D0C" FontFamily="Arial Rounded MT Bold" FontSize="25" 
        Foreground="#FF902D0C" Cursor="Hand" Click="SignIn_Click"/>

        <Label Content="Already Have an Account?" HorizontalAlignment="Left" Height="38" Margin="23,309,0,0" VerticalAlignment="Top" Width="268" Foreground="White" FontSize="20" FontFamily="Arial Rounded MT Bold"/>
        <Label Content="Confirm Password: " HorizontalAlignment="Left" Height="38" Margin="344,226,0,0" VerticalAlignment="Top" Width="208" Foreground="#FF902D0C" FontSize="20" FontFamily="Arial Rounded MT Bold"/>

        
        <TextBox x:Name="UsernameInput" HorizontalAlignment="Left" Height="22" Margin="344,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="383" Background="#FFEEE3E3"/>
        <PasswordBox x:Name="PasswordInput" HorizontalAlignment="Left" Height="21" 
             Margin="344,192,0,0" VerticalAlignment="Top" Width="383" 
             Background="#FFEEE3E3" Cursor="Hand"/>
        <PasswordBox x:Name="ConfirmPasswordInput" HorizontalAlignment="Left" Height="21" 
             Margin="344,269,0,0" VerticalAlignment="Top" Width="383" 
             Background="#FFEEE3E3" Cursor="Hand"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Height="21" 
         Margin="344,192,0,0" VerticalAlignment="Top" Width="383" 
         Background="#FFEEE3E3" Cursor="Hand" Visibility="Collapsed"/>
        <TextBox x:Name="ConfirmPasswordTextBox" HorizontalAlignment="Left" Height="21" 
         Margin="344,269,0,0" VerticalAlignment="Top" Width="383" 
         Background="#FFEEE3E3" Cursor="Hand" Visibility="Collapsed"/>
        

    </Grid>
</Window>
