<Window x:Class="Cozy_Cup_Desktop_App.Register_Form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cozy_Cup_Desktop_App"
        mc:Ignorable="d"
        Title="Register_Form" Height="450" Width="800">
    <Grid Background="#FFF7F5F2">
        <DockPanel HorizontalAlignment="Left" Height="434" LastChildFill="False" VerticalAlignment="Center" Width="304" Background="#FF902D0C">
            <Image x:Name="Logo" Width="137" Height="139" Margin="75,-200,50,50" Source="/vecteezy_aromatic-art-coffee-cup-sketches-and-illustrations-ai_26691146.png">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="/vecteezy_aromatic-art-coffee-cup-sketches-and-illustrations-ai_26691146.png"/>
                </Image.OpacityMask>
            </Image>
        </DockPanel>
        <Label Content="REGISTER" HorizontalAlignment="Left" Height="43" Margin="344,24,0,0" VerticalAlignment="Top" Width="160" Foreground="#FF902D0C" FontSize="25" FontFamily="Arial Rounded MT Bold"/>
        <Label Content="Username: " HorizontalAlignment="Left" Height="38" Margin="344,67,0,0" VerticalAlignment="Top" Width="208" Foreground="#FF902D0C" FontSize="20" FontFamily="Arial Rounded MT Bold" RenderTransformOrigin="0.482,-1.358"/>
        <Label Content="Password: " HorizontalAlignment="Left" Height="38" Margin="344,144,0,0" VerticalAlignment="Top" Width="208" Foreground="#FF902D0C" FontSize="20" FontFamily="Arial Rounded MT Bold"/>
        <CheckBox Content="Show Password" HorizontalAlignment="Left" Height="29" Margin="344,322,0,0" VerticalAlignment="Top" Width="136" FontSize="15" Background="#FFFAE6E6" IsChecked="False" Cursor="Hand"/>
        <Button Content="SIGNUP" HorizontalAlignment="Left" Height="37" Margin="344,351,0,0" VerticalAlignment="Top" Width="184" Background="#FF902D0C" Opacity="0.8" BorderBrush="#FF252121" FontFamily="Arial Rounded MT Bold" FontSize="25" Foreground="#FFFFF6F6" Cursor="Hand" Click="Button_Click"/>
        <Button Content="SIGN IN" HorizontalAlignment="Left" Height="37" Margin="23,351,0,0" VerticalAlignment="Top" Width="248" Background="#FFF4D6D6" Opacity="0.8" BorderBrush="#FF902D0C" FontFamily="Arial Rounded MT Bold" FontSize="25" Foreground="#FF902D0C" Cursor="Hand"/>
        <Label Content="Already Have an Account?" HorizontalAlignment="Left" Height="38" Margin="23,309,0,0" VerticalAlignment="Top" Width="268" Foreground="White" FontSize="20" FontFamily="Arial Rounded MT Bold"/>
        <Label Content="Confirm Password: " HorizontalAlignment="Left" Height="38" Margin="344,226,0,0" VerticalAlignment="Top" Width="208" Foreground="#FF902D0C" FontSize="20" FontFamily="Arial Rounded MT Bold"/>
        <TextBox HorizontalAlignment="Left" Height="22" Margin="344,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="383" Background="#FFEEE3E3"/>
        <TextBox HorizontalAlignment="Left" Height="54" Margin="57,144,0,0" TextWrapping="Wrap" Text="COZY_CUP" VerticalAlignment="Top" Width="214" Background="#FF902D0C" FontFamily="Constantia" FontSize="35" RenderTransformOrigin="0.5,0.5" BorderBrush="#FF902D0C" Foreground="White">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="23,189,0,0" TextWrapping="Wrap" Text="Finding" VerticalAlignment="Top" Width="91" Background="#FF902D0C" FontFamily="Lucida Handwriting" FontSize="17" RenderTransformOrigin="0.5,0.5" BorderBrush="#FF902D0C" Foreground="White">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="106,222,0,0" TextWrapping="Wrap" Text="Comfort" VerticalAlignment="Top" Width="92" Background="#FF902D0C" FontFamily="Lucida Handwriting" FontSize="17" RenderTransformOrigin="0.5,0.5" BorderBrush="#FF902D0C" Foreground="White">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="23,245,0,0" TextWrapping="Wrap" Text="In every" VerticalAlignment="Top" Width="91" Background="#FF902D0C" FontFamily="Lucida Handwriting" FontSize="17" RenderTransformOrigin="0.5,0.5" BorderBrush="#FF902D0C" Foreground="White">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="107,268,0,0" TextWrapping="Wrap" Text="Cup" VerticalAlignment="Top" Width="91" Background="#FF902D0C" FontFamily="Lucida Handwriting" FontSize="17" RenderTransformOrigin="0.5,0.5" BorderBrush="#FF902D0C" Foreground="White">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <PasswordBox HorizontalAlignment="Left" Height="21" Margin="344,192,0,0" VerticalAlignment="Top" Width="383" Background="#FFEEE3E3" Cursor="Hand"/>
        <PasswordBox HorizontalAlignment="Left" Height="21" Margin="344,269,0,0" VerticalAlignment="Top" Width="383" Background="#FFEEE3E3" Cursor="Hand"/>

    </Grid>
</Window>
